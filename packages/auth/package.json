{
  "name": "@lms/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./src/middleware.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "default": "./env.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "dotenv -e ../../.env -- pnpx @better-auth/cli generate --output ../db/src/auth-schema.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@better-auth/expo": "1.2.12",
    "@lms/db": "workspace:*",
    "@lms/email": "workspace:*",
    "@t3-oss/env-nextjs": "catalog:",
    "better-auth": "1.2.12",
    "next": "^15.4.4",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-auth/cli": "1.2.12",
    "@lms/eslint-config": "workspace:*",
    "@lms/prettier-config": "workspace:*",
    "@lms/tsconfig": "workspace:*",
    "@types/react": "catalog:react19",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@lms/prettier-config"
}
