{
	"name": "@nucleus/ui",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"exports": {
		"./styles.css": "./src/styles.css",
		"./components/*": {
			"types": "./dist/src/components/*.d.ts",
			"default": "./src/components/*.tsx"
		},
		"./hooks/*": {
			"types": "./dist/src/hooks/*.d.ts",
			"default": "./src/hooks/*.ts"
		},
		"./lib/*": {
			"types": "./dist/src/lib/*.d.ts",
			"default": "./src/lib/*.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"ui-add": "pnpm dlx shadcn@latest add && node scripts/fix-imports.js && biome format --write"
	},
	"dependencies": {
		"@base-ui/react": "^1.1.0",
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-icons": "^1.3.2",
		"class-variance-authority": "^0.7.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"embla-carousel-react": "^8.6.0",
		"input-otp": "^1.4.2",
		"lucide-react": "^0.563.0",
		"next-themes": "^0.4.6",
		"radix-ui": "^1.4.3",
		"react-day-picker": "^9.13.1",
		"react-hook-form": "^7.71.1",
		"react-resizable-panels": "^4.6.2",
		"recharts": "2.15.4",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"vaul": "^1.1.2"
	},
	"devDependencies": {
		"@nucleus/tailwind-config": "workspace:*",
		"@nucleus/tsconfig": "workspace:*",
		"@types/react": "catalog:react19",
		"react": "catalog:react19",
		"typescript": "catalog:",
		"zod": "catalog:"
	},
	"peerDependencies": {
		"react": "catalog:react19",
		"zod": "catalog:"
	}
}
