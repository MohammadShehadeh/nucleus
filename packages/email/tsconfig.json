{
  "extends": "@nucleus/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [
    "src",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}